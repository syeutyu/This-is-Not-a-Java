<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="dsm.firealarm.SignUpActivity"
                android:background="#ffeeed">

    <ImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/font_logo"
            android:layout_marginTop="50dp"/>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        <EditText
                android:id="@+id/inputName"
                android:background="@drawable/rounded"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:hint="  이름을 입력하세요"
                android:gravity="center"
                android:layout_below="@+id/image"
                android:textSize="13sp"
                android:inputType="textPersonName"/>

        <EditText
                android:id="@+id/inputCode"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/inputName"
                android:layout_centerHorizontal="true"
                android:hint="  기기 번호를 입력하세요"
                android:gravity="center"
                android:background="@drawable/rounded"
                android:textSize="13sp"/>

        <EditText
                android:id="@+id/inputPlace"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/inputCode"
                android:layout_centerHorizontal="true"
                android:hint="  설치 위치를 입력하세요"
                android:gravity="center"
                android:background="@drawable/rounded"
                android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

        <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="취소"
                android:textSize="13sp"
                android:background="@drawable/rounded"/>

        <Button
                android:id="@+id/btnSignUp"
                android:background="@drawable/rounded"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="확인"
                android:textSize="13sp"
                android:layout_marginLeft="100dp"
                android:layout_below="@+id/linearLayout"/>

    </LinearLayout>

</RelativeLayout>